<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Action qui "ouvre" le modèle hostel.hostel -->
    <record id="action_hostel" model="ir.actions.act_window">
        <field name="name">Hostel</field>
        <field name="res_model">hostel.hostel</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="or_view_nocontent_create">
                Create Hostel.
            </p>
        </field>
    </record>

    <!-- Gestion des menus du modèle hostel.hostel -->
    <menuitem id="hostel_main_menu" name="Hostel" web_icon="my_hostel,static/description/icon.png"/>
    <menuitem id="hostel_type_menu" name="Hostel" parent="hostel_main_menu" action="my_hostel.action_hostel"/>

    <!-- Vue form pour hostel.hostel -->
    <record id="view_hostel_form_view" model="ir.ui.view">
        <field name="name">hostel.hostel.form.view</field>
        <field name="model">hostel.hostel</field>
        <field name="arch" type="xml">
            <form string="Hostel">
                <sheet>
                    <div class="oe_title">
                        <h3>
                            <table>
                                <tr colspan="2">
                                    <field name="display_name"/>
                                </tr>
                                <tr>
                                    <td style="padding-right: 10px;">
                                        <field name="name" required="1" placeholder="Name"/>
                                    </td>

                                    <td style="padding-right: 10px;">
                                        <field name="hostel_code" placeholder="Code"/>
                                    </td>
                                </tr>
                            </table>
                        </h3>
                    </div>

                    <field name="image" widget="image" class="oe_avatar"/>
                    <group>
                        <group>
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="street2" placeholder="Street 2 ..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <!-- options='{"no_open": True}' permet d'empêcher de naviger vers le modèle cible via la petite flèche -->
                                <!-- options='{"no_create": True}' permet d'empêcher la création de nouvelles instances -->
                                <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                            </div>
                        </group>
                        <group>
                            <field name="phone" widget="phone"/>
                            <field name="mobile" widget="phone"/>
                            <field name="email" widget="email" context="{'gravatar_image': True}"/>
                        </group>
                        <group>
                            <field name="hostel_floors"/>
                            <field name="active"/>
                            <field name="type"/>
                            <field name="hostel_rating"/>
                            <field name="other_info"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue tree pour hostel.hostel -->
    <record id="view_hostel_tree_view" model="ir.ui.view">
        <field name="name">hostel.hostel.tree.view</field>
        <field name="model">hostel.hostel</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="hostel_code"/>
            </tree>
        </field>
    </record>


    <!-- Vue search pour hostel.hostel -->
    <record id="view_hostel_search_view" model="ir.ui.view">
        <field name="name">hostel.hostel.search.view</field>
        <field name="model">hostel.hostel</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="hostel_code"/>
            </search>
        </field>
    </record>

</odoo>
